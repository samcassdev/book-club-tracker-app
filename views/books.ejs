<!doctype html>
<html>

<head>
  <title>Book Club Tracking App</title>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <h1>Find a new book to read for your next book club meeting!</h1>
  <section id="search" class="">

    <form id="myForm">
      <section class="input-field">
        <label for="search">Search for books here!</label>
        <input type="search" id="books">
      </section>
      <button class="btn red" type="submit" name="button">Search Books</button>
    </form>

  </section>
  <section id="list">
    <ul id="catalog"></ul>
  </section>

  <!-- <a href="/login"><button type="button" name="button">Login</button></a>
      <a href="/signup"><button type="button" name="button">SIGNUP</button></a> -->
  <div class="container">

    <div class="page-header text-center">
      <h1><span class="fa fa-anchor"></span> Profile Page</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6">
        <div class="well">
          <h3><span class="fa fa-user"></span> Local</h3>

          <% if (user.local.email) { %>
          <p>
            <strong>id</strong>: <%= user._id %><br>
            <strong>email</strong>: <%= user.local.email %><br>
            <strong>password</strong>: <%= user.local.password %>
          </p>

          <a href="/unlink/local" class="btn btn-default">Unlink</a>
          <% } else { %>
          <a href="/connect/local" class="btn btn-default">Connect Local</a>
          <% } %>

        </div>
      </div>
      <div class="col-sm-6">
        <h3>Messages</h3>
        <ul class="messages">
          <% for(var i=0; i<books.length; i++) {%>
          <li class="message">
            <span><%= books[i].name %></span>
            <span><%= books[i].msg %></span>
            <span><%= books[i].thumbUp %></span>
            <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
          <% } %>
        </ul>

        <h2>Add a message</h2>
        <% if (user.local.email) { %>
        <form action="/books" method="POST">
          <input type="text" value="<%= user.local.email %>" name="name">
          <input type="text" placeholder="message" name="msg">
          <button type="submit">Submit</button>
        </form>
      </div>
      <% } %>

    </div>

  </div>

  <script src="picture.js"></script>
  <script src="main.js"></script>
  <script src="books.js"></script>
</body>

</html>
